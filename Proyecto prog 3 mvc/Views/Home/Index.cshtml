@model List<Proyecto_prog_3_mvc.Models.view_models.tabla_view_model>

@{
    ViewBag.Title = "Index";
}

@*<link rel="stylesheet" href="~/Content/index.css">*@
<br />

<style>
    #menu{}
    #menu ul{
        list-style:none;
        margin:0;
        padding:0;
    }
    #menu ul li{
        display:inline-block;                            
    }
    #menu ul li btn btn-success{
        float:right;
    }
    
</style>

    
<div id="menu">

    <ul>
        @using (Html.BeginForm("Seleccion", "Home", FormMethod.Post))
        {
            <li>
                @Html.TextBox("Busqueda", null, new { @class = "form-control", placeholder = "Busca por posicion y compañia", style = "text-align:left; padding:5px; with:5px" })
            </li>

            <li>
                <input id="submit1" class="btn btn-primary" type="submit" value="Buscar" />
            </li>
            <li>
                @Html.ActionLink("Publicar Empleo", "Nuevo", "Home", new { @class = "btn btn-success" })
            </li>
        }       
    </ul>

</div>

<h1>Empleos</h1>

<div class="row">

    <div class="col-md-12">

        <table class="table">

            <tr>
                <th>id</th>
                <th>Ubicacion</th>
                <th>Posicion</th>
                <th>Compañia</th>
            </tr>

            @foreach (var oElemento in Model)
             {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.ubicacion</td>
                    <td>@oElemento.posicion</td>
                    <td>@oElemento.compañia</td>
                </tr>
             }
        </table>

    </div>

</div>
